# Server Configuration
PORT=8000
HOST=0.0.0.0
WORKERS=1

# Security
SECRET_KEY=your-secret-key-here-change-in-production
AES_KEY=your-32-byte-aes-key-here-change-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# Cache Configuration (SQLite-based)
CACHE_DB_PATH=./data/cache.db
USE_MEMORY_DB=false
CACHE_TTL=86400

# N8N Integration
N8N_BASE_URL=http://localhost:5678
N8N_TRIGGER_PATH=/webhook/solve-daily
N8N_FETCH_PATH=/webhook/leetcode-code
N8N_API_KEY=

# Selenium Configuration
SELENIUM_TIMEOUT=30
SELENIUM_IMPLICIT_WAIT=10
CHROME_OPTIONS=--no-sandbox,--disable-dev-shm-usage,--disable-gpu

# Cache Configuration
CACHE_TTL=86400
CACHE_REFRESH_HOUR=6
CACHE_REFRESH_MINUTE=0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_BURST=20

# Session Management
JWT_EXPIRY_MINUTES=60
MAX_CONCURRENT_USERS=50

# Development/Debug
DEBUG=False
ENVIRONMENT=production
MOCK_REDIS=False